# Nextcloud 部署环境配置文件
# 请根据实际情况修改以下配置

# 服务器配置
SERVER_IP="192.168.1.100"      # 服务器 IP 地址（请修改）
HTTP_PORT="10081"              # HTTP 端口（请修改）
DOMAIN_NAME="nextcloud.your-domain.com"  # 域名（请修改）

# 管理员配置
ADMIN_USER="nextcloud"         # 管理员用户名
ADMIN_PASSWORD="your_admin_password_here"  # 管理员密码（请修改）

# 数据库配置
MYSQL_PASSWORD="your_mysql_password_here"  # MySQL 密码（请修改）
MYSQL_ROOT_PASSWORD="your_mysql_root_password_here"  # MySQL 根密码（请修改）

# Redis 配置
REDIS_PASSWORD="your_redis_password_here"  # Redis 密码（请修改）

# 信任域配置
TRUSTED_DOMAINS="$SERVER_IP:$HTTP_PORT $DOMAIN_NAME"  # 信任域列表
TRUSTED_PROXIES="172.31.0.0/16"  # 信任代理 IP 范围

# 性能优化参数
# PHP 配置
PHP_MEMORY_LIMIT="1024M"        # PHP 内存限制
PHP_UPLOAD_LIMIT="10G"           # PHP 上传限制
PHP_MAX_EXECUTION_TIME="3600"    # PHP 最大执行时间
PHP_MAX_INPUT_VARS="10000"       # PHP 最大输入变量数
PHP_POST_MAX_SIZE="10G"          # PHP POST 最大大小
PHP_UPLOAD_MAX_FILESIZE="10G"    # PHP 上传最大文件大小

# PHP-FPM 并发优化
PHP_FPM_MAX_CHILDREN="50"        # PHP-FPM 最大子进程数
PHP_FPM_START_SERVERS="10"       # PHP-FPM 启动时的服务器数量
PHP_FPM_MIN_SPARE_SERVERS="5"    # PHP-FPM 最小空闲服务器数量
PHP_FPM_MAX_SPARE_SERVERS="20"   # PHP-FPM 最大空闲服务器数量

# 时区设置
TZ="Asia/Shanghai"               # 时区设置
